<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/content_main_textView_meeting_result"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="회의 결과"
            android:textColor="@android:color/black"
            android:textSize="35sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:weightSum="10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/content_main_imageView_timer"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="@null"
                android:layout_weight="3"
                android:src="@drawable/timer" />


            <TextView
                android:id="@+id/content_main_textView_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="회의 진행 시간"
                android:textColor="@android:color/black"
                android:layout_weight="7"
                android:textSize="25sp" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal">

        <ImageView
            android:id="@+id/content_main_imageView_participation_rate"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@null"
            android:layout_weight="3"
            android:src="@drawable/participation_rate" />

        <TextView
            android:id="@+id/content_main_textView_participation_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="참여율"
            android:textColor="@android:color/black"
            android:layout_weight="7"
            android:textSize="25sp" />

    </LinearLayout>

        <ImageView
            android:id="@+id/content_main_imageView_bar_chart"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@null"
            android:src="@drawable/bar_chart" />

        <TextView
            android:id="@+id/content_main_textView_potg"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="참여율이 가장 높은 팀원 : 이남수"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/content_main_imageView_calender"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@null"
            android:layout_weight="3"
            android:src="@drawable/calendar" />

        <TextView
            android:id="@+id/content_main_textView_calender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음 일정"
            android:textColor="@android:color/black"
            android:layout_weight="7"
            android:textSize="25sp" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="10">


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Prev"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Next"/>
        </LinearLayout>


    </LinearLayout>



</LinearLayout>